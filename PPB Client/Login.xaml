<Window x:Class="PPB_Client.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPB_Client"
        mc:Ignorable="d"
        Title="System Login" Height="200" Width="270" ResizeMode="NoResize">
    <Border>
        <StackPanel Height="170" VerticalAlignment="Top">
            <TextBox x:Name="loginUsername" Margin="15 15 15 0" Padding="5" FontSize="16" Background="White" Text="Username" BorderBrush="#FF3498DB" Foreground="#FF939393" GotFocus="loginUsername_GotFocus" LostFocus="loginUsername_LostFocus"/>
            <PasswordBox x:Name="loginPassword" Margin="15 10 15 0" Padding="5" FontSize="16" Background="White"  BorderBrush="#FF3498DB" Foreground="#FF939393" GotFocus="PasswordBox_GotFocus"  PasswordChar="*" Password="**********" LostFocus="PasswordBox_LostFocus"/>

            <Button x:Name="loginBtn" Margin="15 15 15 0" Height="35" Content="login" FontSize="18" Background="#FF3498DB" Foreground="White" BorderThickness="0" Click="loginPassword_Click"/>
        </StackPanel>
    </Border>
</Window>
