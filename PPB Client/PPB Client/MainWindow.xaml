<Window x:Class="PPB_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPB_Client"
        xmlns:viewmodels="clr-namespace:PPB_Client.ViewModels"
        xmlns:views="clr-namespace:PPB_Client.Views"
        mc:Ignorable="d"
        Title="Penalty Points Bureau" Height="500" Width="800" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="500" Icon="Resources\icon.png">
    <Window.Resources>
        <DataTemplate x:Name="loginViewTemplate" DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="mainViewTemplate" DataType="{x:Type viewmodels:HomeViewModel}">
            <views:MainView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Border Padding="20">
        <ContentControl Content="{Binding}"/>
    </Border>
</Window>
