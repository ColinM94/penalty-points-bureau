<Window x:Class="PPB_Client.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPB_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Border Padding="10">
        <StackPanel>
            <Grid Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Name="ConnectBtn" Click="ConnectBtn_Click" Margin="0 0 10 0" Grid.Column="0" Content="Connect" Width="100" Height="50"/>
                <Button Name="DisconnectBtn" Click="DisconnectBtn_Click" Margin="0 0 10 0" Grid.Column="1" Content="Disconnect" Width="100" Height="50" IsEnabled="False"/>
            </Grid>
            <Label Name="ServerStatusLabel" Content="Not Connected" Margin="0 10 0 0" HorizontalContentAlignment="center" FontSize="15" Foreground="Red"/>
            <TextBox Name="MsgBox" Width="200" Margin="0 35 0 0" Padding="5" IsEnabled="false"/>
            <Button Name="SendMsgBtn" Click="SendMsgBtn_Click" Margin="0 10 10 0" Content="Send" Width="75" Height="35" IsEnabled="false"/>
        </StackPanel>
    </Border>
</Window>
